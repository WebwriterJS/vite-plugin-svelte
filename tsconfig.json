{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
  },
  "exclude": [
    "**/lib",
    "**/node_modules",
    "**/scripts"
  ]
}
